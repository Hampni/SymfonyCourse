{% extends 'layout.html.twig' %}

{% block content %}
    <a href="/admin/albums">Назад</a>
    <div>
        <div><h2>Добавить новую песню для альбома: <br><span style="color: yellowgreen">{{ album.name }}</span></h2></div>
    </div>
    <div class="createNewForm">
        {{ form(formNewSong) }}
    </div>

    <div class="convertAdminPanel">
        <div>
            <span><img class="images" src="/images/albumsImages/{{ album.image }}" alt=""></span>
            <span style="font-size: 30px">{{ album.name }}</span>
        </div>
        {% for key,song in songs %}
           <div class="songsInAlbum">
               <span>{{ key + 1 }}</span>
               <span>{{ song.name }}</span>
           </div>
        {% endfor %}
    </div>
{% endblock %}
